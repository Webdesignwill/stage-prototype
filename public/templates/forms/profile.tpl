<h3>{{display.displayname}}'s Profile</h3>
<div class="form-group">
  <label class="control-label" for="displayname-field">Display name</label>
  <input type="text" class="form-control" id="displayname-field" name="displayname" placeholder="{{display.displayname}}" />
  <span class="help-block m-b-none"></span>
</div>
<div class="form-group">
  <label class="control-label" for="company-field">Company details</label>
  <input type="text" class="form-control" id="company-field" name="company" placeholder="{{display.company}}" />
  <span class="help-block m-b-none"></span>
</div>
<div class="form-group">
  <label class="control-label" for="firstname-field">First name</label>
  <input type="text" class="form-control" id="firstname-field" name="firstname" placeholder="{{display.firstname}}" />
  <span class="help-block m-b-none"></span>
</div>
<div class="form-group">
  <label class="control-label" for="lastname-field">Last name</label>
  <input type="text" class="form-control" id="lastname-field" name="lastname" placeholder="{{display.lastname}}" />
  <span class="help-block m-b-none"></span>
</div>
<div class="form-group pull-right">
  <button type="submit" class="submit-btn btn btn-primary">Update</button>
</div>
